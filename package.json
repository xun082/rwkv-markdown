{
  "name": "rwkv-markdown",
  "version": "0.0.1",
  "description": "Enhanced React Markdown with smart line break handling - Supports tables, lists, and automatic paragraph formatting",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "packageManager": "pnpm@10.28.2",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript && tsc --emitDeclarationOnly",
    "build:watch": "rollup -c rollup.config.ts --configPlugin typescript --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "dev": "echo 'rwkv-markdown is ready for use'",
    "dev:watch": "rollup -c rollup.config.ts --configPlugin typescript --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,md}\"",
    "format:ci": "prettier --check \"src/**/*.{ts,tsx,js,json,md}\"",
    "lint": "eslint . --max-warnings 0",
    "lint:ci": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:watch": "vitest",
    "release": "pnpm publish --no-git-checks"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "markdown",
    "smart",
    "linebreak",
    "table",
    "list",
    "rwkv",
    "enhanced"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "hast-util-to-jsx-runtime": "^2.3.6",
    "html-url-attributes": "^3.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.1.0",
    "vfile": "^6.0.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.15.29",
    "@types/react": "^19.0.6",
    "@types/unist": "^3.0.2",
    "rollup": "^4.31.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.4.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-swc": "^0.4.0",
    "@types/prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.2.1",
    "turbo": "^2.5.3",
    "vite": "^6.4.1",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/rwkv-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/rwkv-markdown/issues"
  },
  "homepage": "https://github.com/yourusername/rwkv-markdown#readme"
}
